doctype html
html
  head
    title CatCraigslist

    link(rel="stylesheet" href="/vendor/bootstrap/dist/css/bootstrap.min.css")
    link(rel='stylesheet', href='/stylesheets/style.css')
  body

    nav.navbar.navbar-expand-sm.navbar-light.bg-light
      a.navbar-brand(href='/') CatCraigslist
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav
          li.nav-item
            a.nav-link(href='/cats/new') New Cat
        form.form-inline(class='mt-2 mt-md-0' action='/' method='GET')
          input.form-control(type='text' name='search')
          button.btn(type='submit') Search

    .container
      block content

    footer.mt-5
      .container-fluid.bg-danger.py-3
        .container
          .row.py-3
            .col-md-9
              p.text-white CatCraigslist &#xA9; 2018


